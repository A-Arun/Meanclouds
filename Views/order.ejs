	<div class="clear"> </div>
    
    
    <div class="food">
    
       <form action="/confirm" method="post">
    
        
       <div class="clear"> </div>
                  
       <% for(var i=0; i<food.length; i++) {%> 
        <div class=" col-sm-1">  </div>

        
       <div class="well col-sm-3 ">
        
           <img src="/food/<%= food[i].imageid %>.jpg" class="img-thumbnail">
           <h2> <%= food[i].hotel %> </h2>
            <p class="alert alert-info" align="center"> <%= food[i].ftype %></p> 
           <p class="alert alert-primary" align="center">Cost for Two <span class="badge"> Rs.<%= food[i].cost %>/- </span></p> 
           <input type="hidden" value= "<%= food[i].imageid %>" name="imageid" >
       </div>  
               <div class=" col-sm-1">  </div>
<% } %>
        <div class="well col-sm-4 ">
         <table style="width:90%" class="table table-striped"  id="leftBox1">
             <th> Enter Details</th>
             
            <tr> <td> Name </td>
                <td> <input type ="text" placeholder="Name" name="name"></td>
            </tr>
             
             <tr> <td> Address </td>
                <td> <input type ="textarea" placeholder="Address" rows="3" cols="50"  name="addr"></td>
            </tr>
             
             <tr> <td> Phone </td>
                <td> <input type ="text" placeholder="Phone" name="phone"></td>
            </tr>
             <tr> <td> Quantity </td>
                <td> <input type ="text" placeholder="Quantity" name="qty"></td>
            </tr>
            
             
             <tr> <td> Confirm :  </td>
                 <td><button type="submit">Submit</button> </td>
            </tr>
            </table>
            

          
       </div>  
        
         </form>
